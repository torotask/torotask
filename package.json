{
  "name": "torotask-monorepo",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "description": "Monorepo for ToroTask related packages and apps",
  "license": "MIT",
  "engines": {
    "node": "20",
    "pnpm": ">=10 <11"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "prepare": "simple-git-hooks",
    "changeset": "changeset",
    "version:packages": "changeset version",
    "publish:packages": "turbo run build --filter=./packages/* && changeset publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@changesets/changelog-github": "catalog:",
    "@changesets/cli": "catalog:",
    "@changesets/get-github-info": "catalog:",
    "@changesets/types": "catalog:",
    "@swc-node/register": "catalog:",
    "@swc/core": "catalog:",
    "@types/node": "catalog:",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "lint-staged": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,mjs,cjs}": [
      "eslint --cache"
    ],
    "**/*.{json,md,yml,yaml}": [
      "eslint --cache --fix"
    ]
  }
}
