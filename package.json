{
  "name": "torotask-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for ToroTask related packages and apps",
  "license": "MIT",
  "scripts": {
    "build": "nx run-many -t build",
    "clean": "nx run-many -t clean",
    "format": "biome format --write",
    "lint": "biome lint",
    "prepare": "simple-git-hooks",
    "syncpack:fix": "syncpack format && syncpack fix-mismatches",
    "watch": "nx watch --all --includeDependentProjects -- nx run-many -t build:dev -p $NX_PROJECT_NAME"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@nx/js": "^21.6.8 ",
    "@swc-node/register": "^1.10.10",
    "@swc/core": "^1.11.21",
    "@types/node": "^22.14.0",
    "dotenv": "^16.4.7",
    "lint-staged": "^15.5.0",
    "nx": "^21.6.8",
    "simple-git-hooks": "^2.12.1",
    "syncpack": "^13.0.3",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": ["biome lint --fix", "biome format --write"],
    "**/*.{json,md}": ["biome format --write"]
  },
  "pnpm": {
    "overrides": {
      "brace-expansion@>=1.0.0 <=1.1.11": ">=1.1.12",
      "brace-expansion@>=2.0.0 <=2.0.1": ">=2.0.2",
      "tmp@<=0.2.3": ">=0.2.4"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  }
}
